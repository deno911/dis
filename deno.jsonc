{
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "deno.window",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "./types.ts"
    ]
  },
  "fmt": {
    "files": {
      "exclude": [
        ".vscode"
      ]
    },
    "options": {
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "rules": {
      "exclude": [
        "no-explicit-any",
        "no-bad-types",
        "no-namespace",
        "ban-types"
      ]
    }
  }
}
